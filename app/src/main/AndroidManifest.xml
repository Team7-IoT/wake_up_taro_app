<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.team7.wakeuptaroapp"
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:versionCode="@integer/version_code"
          android:versionName="@string/version_name">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat">
        <activity
            android:name=".activities.StartActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.AlarmListActivity"
            android:label="@string/title_activity_alarm_list">
        </activity>
        <activity
            android:name=".activities.AlarmActivity"
            android:label="@string/title_activity_alarm">
        </activity>
        <activity
            android:name=".activities.SettingActivity"
            android:label="@string/title_activity_setting">
        </activity>
        <activity
            android:name=".activities.AlarmNotificationActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>

        <service android:name=".services.AlarmService"/>

        <receiver android:name=".services.AlarmReceiver">
            <intent-filter>
                <action android:name="TIMER_FINISHED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>
