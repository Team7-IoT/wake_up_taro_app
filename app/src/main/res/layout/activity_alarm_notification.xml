<?xml version="1.0" encoding="utf-8"?>
<com.skyfishjy.library.RippleBackground
    android:id="@+id/content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rb_color="@color/newsprint"
    app:rb_duration="5000"
    app:rb_radius="32dp"
    app:rb_rippleAmount="4"
    app:rb_scale="6">

    <TextView
        android:id="@+id/alarm_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:singleLine="false"
        android:text="@string/message_alarm"
        android:textSize="30dp"
        />

    <ImageView
        android:id="@+id/taro_dish"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_centerInParent="true"
        android:src="@drawable/taro_dish"/>

    <Button
        android:id="@+id/stop_alarm"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="63dp"
        android:background="@color/kraft_paper"
        android:onClick="stopAlarmForce"
        android:text="@string/stop_alarm"
        android:textColor="@color/pewter"
        android:textSize="24sp"
        />
</com.skyfishjy.library.RippleBackground>
